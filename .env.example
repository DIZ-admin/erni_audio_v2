# Speech Pipeline Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями

# =============================================================================
# API КЛЮЧИ (ОБЯЗАТЕЛЬНО)
# =============================================================================

# Pyannote.ai API ключ (новый формат, рекомендуется)
PYANNOTEAI_API_TOKEN=your_pyannote_api_token_here

# Pyannote.ai API ключ (старый формат, поддерживается для совместимости)
# PYANNOTE_API_KEY=your_pyannote_api_key_here

# OpenAI API ключ для Whisper
OPENAI_API_KEY=your_openai_api_key_here

# Replicate API ключ для Whisper
REPLICATE_API_TOKEN=your_replicate_api_token_here

# =============================================================================
# КОНФИГУРАЦИЯ PRODUCTION (ОПЦИОНАЛЬНО)
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Максимальный размер файла в MB
MAX_FILE_SIZE_MB=100

# Максимальное количество одновременных задач
MAX_CONCURRENT_JOBS=3

# Включить детальные метрики производительности
ENABLE_PERFORMANCE_METRICS=true

# Включить health checks
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# МОНИТОРИНГ И АЛЕРТИНГ (ОПЦИОНАЛЬНО)
# =============================================================================

# Webhook URL для алертов (если используется)
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email для уведомлений об ошибках (если используется)
# ALERT_EMAIL=admin@yourcompany.com

# =============================================================================
# БЕЗОПАСНОСТЬ (ОПЦИОНАЛЬНО)
# =============================================================================

# Включить строгую валидацию MIME типов
STRICT_MIME_VALIDATION=true

# Требовать только HTTPS URLs
REQUIRE_HTTPS_URLS=true

# Включить rate limiting
ENABLE_RATE_LIMITING=true

# =============================================================================
# API URLS (ОПЦИОНАЛЬНО - для кастомизации)
# =============================================================================

# OpenAI API URL (по умолчанию: https://api.openai.com/v1)
# OPENAI_API_URL=https://api.openai.com/v1

# Pyannote.ai API URL (по умолчанию: https://api.pyannote.ai/v1)
# PYANNOTE_API_URL=https://api.pyannote.ai/v1

# =============================================================================
# ТАЙМАУТЫ И ЛИМИТЫ (ОПЦИОНАЛЬНО)
# =============================================================================

# OpenAI API таймауты (секунды)
# OPENAI_CONNECTION_TIMEOUT=30
# OPENAI_READ_TIMEOUT=120
# OPENAI_TOTAL_TIMEOUT=300

# Pyannote.ai API таймауты (секунды)
# PYANNOTE_CONNECTION_TIMEOUT=30
# PYANNOTE_READ_TIMEOUT=180
# PYANNOTE_TOTAL_TIMEOUT=600

# Rate limiting (запросов в минуту)
# OPENAI_RATE_LIMIT=50
# PYANNOTE_RATE_LIMIT=20
# REPLICATE_RATE_LIMIT=100
# RATE_LIMIT_WINDOW=60

# Retry параметры
# OPENAI_MAX_RETRIES=3
# OPENAI_RETRY_MIN_WAIT=1.0
# OPENAI_RETRY_MAX_WAIT=30.0
# PYANNOTE_MAX_RETRIES=40
# PYANNOTE_RETRY_MIN_WAIT=2.0
# PYANNOTE_RETRY_MAX_WAIT=30.0

# =============================================================================
# ОБРАБОТКА ФАЙЛОВ (ОПЦИОНАЛЬНО)
# =============================================================================

# Максимальный размер файла (MB)
# MAX_FILE_SIZE_MB=300

# Максимальная длительность аудио (часы)
# MAX_AUDIO_DURATION_HOURS=4

# Параллельная обработка
# MAX_CONCURRENT_JOBS=3
# MAX_CONCURRENT_CHUNKS=3
# CHUNK_TIMEOUT_MINUTES=30

# =============================================================================
# ПУТИ К ДИРЕКТОРИЯМ (ОПЦИОНАЛЬНО)
# =============================================================================

# Базовые директории
# DATA_DIR=data
# CACHE_DIR=cache
# LOGS_DIR=logs
# VOICEPRINTS_DIR=voiceprints
# METRICS_DIR=logs/metrics
# INTERIM_DIR=data/interim

# =============================================================================
# КАЧЕСТВО И ПОРОГИ (ОПЦИОНАЛЬНО)
# =============================================================================

# Пороги уверенности и качества
# MIN_CONFIDENCE_THRESHOLD=0.7
# MIN_SEGMENT_DURATION=0.5
# MIN_OVERLAP_THRESHOLD=0.1

# QC параметры
# PER_SPEAKER_SECONDS=30
# MAX_SILENCE_GAP=5.0

# =============================================================================
# ЛОГИРОВАНИЕ (ОПЦИОНАЛЬНО)
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Ротация логов
# LOG_ROTATION_MB=10
# LOG_BACKUP_COUNT=5
# LOG_FORMAT=json
# SEPARATE_ERROR_LOG=true

# =============================================================================
# КЭШИРОВАНИЕ (ОПЦИОНАЛЬНО)
# =============================================================================

# Настройки кэша
# CACHE_ENABLED=true
# CACHE_TTL_HOURS=24
# CACHE_MAX_SIZE_MB=1000
# INTERMEDIATE_RETENTION_HOURS=24

# =============================================================================
# МОНИТОРИНГ (ОПЦИОНАЛЬНО)
# =============================================================================

# Включение мониторинга
# MONITORING_ENABLED=true
# METRICS_RETENTION_DAYS=30

# Пороги алертов
# CPU_THRESHOLD_PERCENT=80
# MEMORY_THRESHOLD_PERCENT=80
# DISK_FREE_THRESHOLD_GB=1
# PROCESSING_TIME_THRESHOLD_MULTIPLIER=2.0

# =============================================================================
# ТРАНСКРИПЦИЯ (ОПЦИОНАЛЬНО)
# =============================================================================

# Модели транскрипции
# TRANSCRIPTION_MODEL=whisper-1
# TRANSCRIPTION_FALLBACK_MODEL=whisper-1
# TRANSCRIPTION_TEMPERATURE=0.0
# TRANSCRIPTION_LANGUAGE=auto
# ENABLE_COST_ESTIMATION=true

# =============================================================================
# WEBHOOKS (ОПЦИОНАЛЬНО)
# =============================================================================

# Pyannote.ai webhook секрет для верификации подписи
# Получите секрет в dashboard.pyannote.ai -> Webhooks
PYANNOTEAI_WEBHOOK_SECRET=your_webhook_secret_here

# Порт для webhook сервера (по умолчанию 8000)
WEBHOOK_SERVER_PORT=8000

# Хост для webhook сервера (по умолчанию 0.0.0.0)
WEBHOOK_SERVER_HOST=0.0.0.0

# =============================================================================
# ИНСТРУКЦИИ ПО ПОЛУЧЕНИЮ API КЛЮЧЕЙ
# =============================================================================

# Pyannote.ai:
# 1. Зарегистрируйтесь на https://pyannote.ai
# 2. Перейдите в личный кабинет
# 3. Создайте новый API ключ
# 4. Скопируйте ключ в PYANNOTEAI_API_TOKEN

# OpenAI:
# 1. Зарегистрируйтесь на https://platform.openai.com
# 2. Перейдите в API Keys
# 3. Создайте новый секретный ключ
# 4. Скопируйте ключ в OPENAI_API_KEY

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================
# ВНИМАНИЕ: Никогда не коммитьте файл .env в Git!
# Файл .env должен быть добавлен в .gitignore
# Используйте безопасные методы передачи ключей в production
