{
  "environment": "production",
  "version": "2.0.0",
  "build_date": "2024-01-29T12:00:00+03:00",
  "build_number": "2.0.0-1234567890",
  
  "security": {
    "max_file_size_mb": 300,
    "allowed_mime_types": [
      "audio/mpeg",
      "audio/wav", 
      "audio/x-wav",
      "audio/wave",
      "audio/mp4",
      "audio/x-m4a",
      "audio/flac",
      "video/mp4",
      "video/x-msvideo",
      "video/quicktime"
    ],
    "allowed_extensions": [".mp3", ".wav", ".mp4", ".avi", ".mov", ".m4a", ".flac"],
    "require_https_urls": true,
    "validate_mime_types": true,
    "scan_for_malware": false
  },
  
  "rate_limiting": {
    "pyannote_api": {
      "max_requests_per_minute": 30,
      "window_seconds": 60,
      "enabled": true
    },
    "openai_api": {
      "max_requests_per_minute": 50,
      "window_seconds": 60,
      "enabled": true
    }
  },
  
  "api_timeouts": {
    "pyannote": {
      "connection_timeout": 30,
      "read_timeout": 300,
      "max_retries": 5,
      "retry_backoff_factor": 2.0
    },
    "openai": {
      "connection_timeout": 60,
      "read_timeout": 600,
      "max_retries": 3,
      "retry_backoff_factor": 1.5
    }
  },
  
  "logging": {
    "level": "INFO",
    "format": "json",
    "rotation": {
      "max_size_mb": 10,
      "backup_count": 5
    },
    "separate_error_log": true,
    "include_performance_metrics": true
  },
  
  "monitoring": {
    "health_checks_enabled": true,
    "metrics_collection_enabled": true,
    "metrics_retention_days": 30,
    "performance_alerts": {
      "cpu_threshold_percent": 80,
      "memory_threshold_percent": 80,
      "disk_free_threshold_gb": 1,
      "processing_time_threshold_multiplier": 2.0
    }
  },
  
  "processing": {
    "max_concurrent_jobs": 3,
    "max_audio_duration_hours": 4,
    "temp_file_cleanup_enabled": true,
    "save_intermediate_results": true,
    "intermediate_results_retention_hours": 24
  },
  
  "cache": {
    "enabled": false,
    "ttl_hours": 24,
    "max_size_mb": 1000
  },
  
  "alerts": {
    "enabled": false,
    "webhook_url": null,
    "email_notifications": false,
    "alert_on_errors": true,
    "alert_on_performance_issues": true
  }
}
